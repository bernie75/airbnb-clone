<div class="col-xs-12 col-sm-4">
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= flat.photo %>');">
  <div class="card-category"><%= flat.user.first_name%></div>

    <div class="card-description">
      <h2><%= flat.title %> </h2>
      <p><%= flat.description[0..50] %></p>
    </div>
    <%= image_tag flat.user.avatar, class:"card-user avatar-large" %>
    <%= link_to '', flat, class: "card-link" %>
  </div>
</div>
